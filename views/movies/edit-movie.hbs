<h2>Edit movie</h2>

<form action="/movies/{{ movie._id }}/edit" method="POST">
 <div>
    <label for="title">Title<label>
  <input type="text" class="form-control" name="title" value="{{ movie.title }}"/>
   </div>

   <div>
     <label for="genre">Genre<label>
<input type="text" name="genre" value="{{ movie.genre }}" />
   </div>

   <div>
     <label for="plot">Plot<label>
<input type="text" name="plot" value="{{ movie.plot }}" />
</div>
 <div>
<label for="title">Cast</label>
    <select multiple name="cast">
      {{#each celebrities as |celebrity|}}
        <option value="{{ celebrity._id }}">
          {{ celebrity.name }}
        </option>
      {{/each}}
    </select>
   </div>
<button type="submit">Save changes</button>
</form>