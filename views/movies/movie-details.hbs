<h2>{{movie.title}}</h2>
<br />
{{movie.genre}}
<br />
{{movie.plot}}
<br />
{{#if movie.cast}}
  {{#each movie.cast as |celebrity|}}
    <br />
    {{celebrity.name}}
    <br />
    {{celebrity.occupation}}
    <br />
    {{celebrity.catchPhrase}}
    <br />
  {{/each}}
{{/if}}
<br />

<form action="/movies/{{movie._id}}/edit" method="POST">
  <button type="submit" class="btn btn-primary btn-sm">Edit movie</button>
</form>

<form action="/movies/{{movie._id}}/delete" method="POST">
  <button type="submit" class="btn btn-danger">Delete movie</button>
</form>